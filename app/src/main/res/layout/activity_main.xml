<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/newbg">

    <TextView
        android:layout_marginTop="40dp"
        android:layout_marginLeft="28dp"
        android:textColor="@color/TextWhite"
        android:id="@+id/title"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ramadahan Apps"
        android:textSize="25sp"/>
    <TextView
        android:layout_marginLeft="40dp"
        android:textColor="@color/TextWhite"
        android:id="@+id/title2"
        android:fontFamily="monospace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sahabat Puasamu"
        android:textSize="20sp"/>

    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:background="@drawable/card_jadwal"
            android:id="@+id/muCard"
            android:layout_marginBottom="10dp"
            android:layout_gravity="center"
            android:layout_width="340dp"
            android:layout_height="match_parent"
            app:cardCornerRadius="15dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginBottom="10dp"
                android:padding="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="Jadwal Sholat"
                    android:textColor="@color/TextBlack"
                    android:textSize="20sp"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                     <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Imsak"
                        android:textSize="15sp"
                        android:textColor="@color/TextBlack"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4.18"
                        android:textSize="15sp"
                        android:textColor="@color/TextCyan"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Subuh"
                        android:textSize="15sp"
                        android:textColor="@color/TextBlack"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4.28"
                        android:textSize="15sp"
                        android:textColor="@color/TextCyan"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Imsak"
                        android:textSize="15sp"
                        android:textColor="@color/TextBlack"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4.18"
                        android:textSize="15sp"
                        android:textColor="@color/TextCyan"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Subuh"
                        android:textSize="15sp"
                        android:textColor="@color/TextBlack"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4.28"
                        android:textSize="15sp"
                        android:textColor="@color/TextCyan"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Imsak"
                        android:textSize="15sp"
                        android:textColor="@color/TextBlack"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4.18"
                        android:textSize="15sp"
                        android:textColor="@color/TextCyan"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Subuh"
                        android:textSize="15sp"
                        android:textColor="@color/TextBlack"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4.28"
                        android:textSize="15sp"
                        android:textColor="@color/TextCyan"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Imsak"
                        android:textSize="15sp"
                        android:textColor="@color/TextBlack"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4.18"
                        android:textSize="15sp"
                        android:textColor="@color/TextCyan"/>

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Subuh"
                        android:textSize="15sp"
                        android:textColor="@color/TextBlack"/>
                    <TextView
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="4.28"
                        android:textSize="15sp"
                        android:textColor="@color/TextCyan"/>
                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:weightSum="2"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:background="@drawable/card_item"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="5dp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/calendar"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kalender Hijriah"
                        android:textSize="15sp"
                        android:textColor="@color/TextBlack"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_weight="1"
                android:background="@drawable/card_item"
                app:cardCornerRadius="10dp"
                app:cardElevation="10dp"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginRight="25dp"
                android:layout_marginLeft="5dp">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/calendar"/>

                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kalender Hijriah"
                        android:textSize="15sp"
                        android:textColor="@color/TextBlack"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

    </LinearLayout>



</LinearLayout>